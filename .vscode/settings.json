{
	// 关闭自动保存
	"files.autoSave": "off",
	"editor.tabSize": 2,
	"editor.suggestSelection": "recentlyUsed",
	// 保存时格式化
	// "editor.formatOnSave": true,
	// // 默认使用prettier格式化
  "editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.detectIndentation": false,
	// ********** eslint配置
	// 保存时修复所有能修复的问题
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
